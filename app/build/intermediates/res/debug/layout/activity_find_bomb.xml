<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.Interactive9.RBS.FindBombActivity"
    android:background="@drawable/rbs_bg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bomb Scanner"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/smallbomb"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find bomb"
        android:textSize="17sp"
        android:id="@+id/button23"
        android:onClick="Unity"
        android:width="175sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/rbs_box"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picked up a bomb in the area, look for the poster shown below"
        android:id="@+id/textView6"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:width="280sp"
        android:textColor="#ff0f5300"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time to detonation 0:10"
        android:id="@+id/textView7"
        android:layout_marginBottom="40dp"
        android:textColor="#ff740200"
        android:width="280sp"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />


</RelativeLayout>
